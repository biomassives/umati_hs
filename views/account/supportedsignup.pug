extends ../layout

block content
  .pb-2.mt-2.mb-4.border-bottom
    h3 Free account signup
  form(id='signup-form', method='POST')
    input(type='hidden', name='_csrf', value=_csrf)
    .form-group.row
      label.col-md-3.col-form-label.font-weight-bold.text-right(for='email') Email
      .col-md-7
        input.form-control(type='email', name='email', id='email', placeholder='Email', autofocus, autocomplete='email', required)
    .form-group.row
      label.col-md-3.col-form-label.font-weight-bold.text-right(for='password') Password
      .col-md-7
        input.form-control(type='password', name='password', id='password', placeholder='Password', autocomplete='new-password', minlength='8', required)
    .form-group.row
      label.col-md-3.col-form-label.font-weight-bold.text-right(for='confirmPassword') Confirm Password
      .col-md-7
        input.form-control(type='password', name='confirmPassword', id='confirmPassword', placeholder='Confirm Password', autocomplete='new-password', minlength='8', required)

    .form-group.row
      label.col-md-3.col-form-label.font-weight-bold.text-right(for='group') Group affiliation 
      .col-md-7
        .form-check.form-check-inline
           input(type='radio', class='form-check-input', name='visibility', value='ECHO', data-toggle='radio')
           label.form-check-label ECHO Related
        .form-check.form-check-inline
           input(type='radio', class='form-check-input', name='visibility', value='SCD', data-toggle='radio')
           label.form-check-label SCD Clinic
        .form-check.form-check-inline
           input(type='radio', class='form-check-input', name='visibility', value='self help', data-toggle='radio')
           label.form-check-label Self Help
        .form-check.form-check-inline
           input(type='radio', class='form-check-input', name='visibility', value='tinyjunkya', data-toggle='radio')
           label.form-check-label TinyJunkyard
        .form-check.form-check-inline
           input(type='radio', class='form-check-input', name='visibility', value='tinyfood', data-toggle='radio')
           label.form-check-label TinyFood
        .form-check.form-check-inline
           input(type='radio', class='form-check-input', name='visibility', value='Ecocity', data-toggle='radio')
           label.form-check-label Ecocity
        .form-check.form-check-inline
           input(type='radio', class='form-check-input', name='visibility', value='etiny', data-toggle='radio')
           label.form-check-label Etiny Creatives
        .form-check.form-check-inline
           input(type='radio', class='form-check-input', name='visibility', value='unaffiliated', data-toggle='radio')
           label.form-check-label Unaffiliated
    .form-group.row
      label.col-md-3.col-form-label.font-weight-bold.text-right(for='group') Group name
      .col-md-7
        input.form-control(type='text', name='group', id='group', placeholder='Group name', autofocus, autocomplete='group')

    .form-group.offset-sm-3.col-md-7.pl-2
      button.btn.btn-success(type='submit')
        i.fas.fa-user-plus.fa-sm
        | Signup
