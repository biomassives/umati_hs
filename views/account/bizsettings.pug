extends ../layout

block content
  .pb-2.mt-2.mb-4.border-bottom
 
  
  span.caps #{user.business.name} SETTINGS - 
  a(href='/account/business') Profile 

  hr


  form(action='/account/bizsettings', method='POST')
    input(type='hidden', name='_csrf', value=_csrf)
    .form-group.row
      label.col-md-3.col-form-label.font-weight-bold.text-left(for='name') biz Title
      .col-md-7
        input.form-control(type='text', name='biztitle', id='biztitle', value=user.bizsettings.biztitle, autocomplete='biztitle')
    .form-group.row
      label.col-md-3.col-form-label.font-weight-bold.text-left(for='shortdesc') Short Description
      .col-md-7
        input.form-control(type='text', name='shortdesc', id='shortdesc', value=user.bizsettings.shortdesc, autocomplete)
    .form-group.row
      label.col-md-3.col-form-label.font-weight-bold.text-left(for='bizdesc') Description
      .col-md-7
        input.form-control(type='text', name='bizdesc', id='bizdesc', value=user.bizsettings.bizdesc, autocomplete)
    .form-group.row
      label.col-md-3.col-form-label.font-weight-bold.text-left(for='biztags') Tags
      .col-md-7
        input.form-control(type='text', name='biztags', id='biztags', value=user.bizsettings.biztags, autocomplete='biztags')
    .form-group.row
      label.col-md-3.col-form-label.font-weight-bold.text-left(for='visibility') Visibility
      .col-md-1.form-check.form-check-inline
        input(type='radio', class='form-check-input' checked=user.bizsettings.visibility == 'visible', name='visibility', id='visibility', value='visible', data-toggle='radio')
        label.form-check-label Visible
      .col-md-2.form-check.form-check-inline
        input(type='radio', class='form-check-input' checked=user.bizsettings.visibility == 'group', name='visibility', id='visibility', value='group', data-toggle='radio')
        label.form-check-label My Group Only
      .col-md-2.form-check.form-check-inline
        input(type='radio', class='form-check-input' checked=user.bizsettings.visibility == 'subgroup', name='visibility', id='visibility', value='subgroup', data-toggle='radio')
        label.form-check-label Sub Group Only
      .col-md-1.form-check.form-check-inline
        input(type='radio', class='form-check-input' checked=user.bizsettings.visibility == 'invisible', name='visibility', id='visibility', value='invisible', data-toggle='radio')
        label.form-check-label Invisible
    .form-group.row
      label.col-md-3.col-form-label.font-weight-bold.text-left(for='template') Template
      .col-md-7
        select#template.select.form-control.input-lg(for='template', name='template')
          option(value='0') -- Select --
          option(value='8' selected=(user.bizsettings.visibility == visibility) ) Light
          option(value='9' selected=(user.bizsettings.visibility == visibility) ) Dark
          option(value='10' selected=(user.bizsettings.visibility == visibility) ) Business
          option(value='11' selected=(user.bizsettings.visibility == visibility) ) Business2
          option(value='12' selected=(user.bizsettings.visibility == visibility) ) Art1
          option(value='13' selected=(user.bizsettings.visibility == visibility) ) Art2
          option(value='14' selected=(user.bizsettings.visibility == visibility) ) Music1
          option(value='15' selected=(user.bizsettings.visibility == visibility) ) Music2
    .form-group 
      .offset-sm-3.col-md-7.pl-2
        button.btn.btn.btn-primary(type='submit')
          i.fas.fa-pencil-alt.fa-sm
          | Update Settings

  include ../partials/profilehead.pug
